{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["flake.lock", "flake.nix", "biome.json"],
  "globalPassThroughEnv": [
    "CLOUDSDK_PROJECT",
    "CLOUDSDK_CORE_PROJECT",
    "GCP_PROJECT",
    "GCLOUD_PROJECT",
    "GOOGLE_CLOUD_PROJECT",
    "CLOUDSDK_AUTH_CREDENTIAL_FILE_OVERRIDE",
    "GOOGLE_APPLICATION_CREDENTIALS",
    "GOOGLE_GHA_CREDS_PATH",
    "GITHUB_*",
    "ACTIONS_*"
  ],
  "tasks": {
    "build": {
      "cache": true,
      "outputs": ["dist/**/*", "!dist/**/*.d.ts", "!dist/**/*.d.ts.map", ".vercel/**/*"],
      "dependsOn": ["^build"]
    },
    "check": {
      "cache": true,
      "dependsOn": ["@shipfox/biome#build"]
    },
    "cli": {
      "cache": false,
      "dependsOn": ["build"],
      "passThroughEnv": ["*"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build", "migrate"],
      "env": ["LOG_LEVEL", "LOG_PRETTY", "PORT"]
    },
    "migrate": {
      "cache": false,
      "dependsOn": ["^migrate"]
    },
    "migrate:test": {
      "cache": false,
      "dependsOn": ["^migrate:test"]
    },
    "type": {
      "cache": true,
      "outputs": ["dist/**/*.d.ts", "dist/**/*.d.ts.map"],
      "dependsOn": ["^type"]
    },
    "test": {
      "cache": true,
      "dependsOn": ["^build", "migrate:test"]
    }
  }
}
